<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#FCCF31"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item android:bottom="8px">
                <shape>
                    <padding android:bottom="12dp"/>

                    <solid android:color="#FDEB71"/>

                    <corners android:radius="5dp"/>

                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="5dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#FCCF31"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item android:bottom="8px">
                <shape>
                    <padding android:bottom="12dp"/>

                    <solid android:color="#FCCF31"/>

                    <corners android:radius="5dp"/>

                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="5dp"
                            android:bottom="10dp"/>
                </shape>

            </item>
        </layer-list>
    </item>
</selector>