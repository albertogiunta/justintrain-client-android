<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:locale="it"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
                android:id="@+id/iv_cup"
                android:layout_height="120dp"
                android:layout_width="200dp"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/heart"
                />

        <TextView
                android:id="@+id/tv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:layout_below="@id/iv_cup"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Grazie.\n\nCiò che hai fatto significa molto per me.\nSignifica che quest'app ti piace e ti è stata utile, e che il mio lavoro ha anche in piccolissima parte migliorato la giornata di qualcuno, là fuori. Grazie davvero."
                fontPath="@string/font_path_bold"
                />

        <View
                android:id="@+id/v_separator"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_below="@id/tv_txt"
                android:layout_centerHorizontal="true"
                android:background="@color/about_separator_color"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:layout_below="@id/v_separator"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="PS. Per qualsiasi problema non esitare a contattarmi via mail o Twitter!"
                fontPath="@string/font_path_standard"
                />


    </RelativeLayout>

</ScrollView>