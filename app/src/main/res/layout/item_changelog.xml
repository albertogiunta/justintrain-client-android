<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:locale="it"
        android:id="@+id/chg_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        tools:background="@color/bg_grey_lighter"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            >


        <!-- ChangeLog Row [Bullet Point] You have to use the id="chg_textbullet" -->
        <TextView
                android:id="@+id/chg_textbullet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:textColor="@color/txt_dark"
                android:text="â€¢"
                />


        <!-- ChangeLog Row [Text] You have to use the id="chg_text" -->
        <TextView
                android:id="@+id/chg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/txt_dark"
                tools:text="Aggiunta visualizzazione dei cambiamenti tramite la finestra di Changelog (quella che vedi ora)"
                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/bg_grey"
            android:visibility="gone"
            />

</LinearLayout>