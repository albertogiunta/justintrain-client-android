<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorPrimaryDark">@color/bg_darker</item>
        <item name="colorAccent">@color/btn_dark_cyan</item>
        <item name="android:textColor">@color/txt_dark</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <!--<style name="AppThemeNoShadowActionbar" parent="Theme.AppCompat.Light">-->
    <style name="AppThemeNoActionbar" parent="Theme.AppCompat.Light">
        <item name="actionBarTheme">@style/Theme.MyApp.ActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorControlNormal">@color/bg_white</item>
    </style>

    <style name="AppThemeNoShadowActionbar" parent="Theme.AppCompat.Light">
        <item name="actionBarTheme">@style/Theme.MyApp.ActionBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorControlNormal">@color/bg_white</item>
    </style>

    <style name="AppThemeActionbarPremiumActivity" parent="Theme.AppCompat.Light">
        <item name="actionBarTheme">@style/Theme.MyApp.ActionBarPremium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">#212121</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/btn_dark_cyan</item>
        <item name="colorPrimaryDark">@color/btn_dark_cyan</item>
        <item name="colorAccent">@color/btn_dark_cyan</item>
        <item name="android:textColor">@color/txt_dark</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.MyApp.ActionBarPremium" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

